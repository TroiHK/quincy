<div id="{{ content.acf_fc_layout ~ '-' ~ loop.index }}" class="block-amenity">
	<div class="block-amenity__item">
		<header>
			<div class="row">
				<div class="col-md-7">
					<h2 class="block-amenity__item__title">{{ content.title }}</h2>
					<p>{{ content.description }}</p>
				</div>
			</div>
		</header>
		<div class="block-amenity__item__detail">
			{% if content.gallery %}
			<div class="block-amenity__item__gallery">
				<div class="gallery-slider slider-fix-h">
					{% for image in content.gallery %}
					<div style="height: 450px;" class="is-scroll-image">
						<div data-content-image>
							<img src="{{ Image(image).src|resize(1920) }}" alt="{{ image.alt }}">
						</div>
						<div class="wrap-scroll wrap-vertical" data-scroll-image>
							<div class="slider-scroll-image"></div>
						</div>
					</div>
					{% endfor %}
				</div>
			</div>
			{% endif %}
		</div>
	</div>
</div>