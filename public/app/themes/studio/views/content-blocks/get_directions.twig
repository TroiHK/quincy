<div id="{{ content.acf_fc_layout ~ '-' ~ loop.index }}" class="directions">
	<div class="directions__container">
		<p class="title">{{ content.title }}</p>
		<div class="directions__form">
			<form class="get-dir">
				<div class="directions__form--container">
					<div class="form-input">
						<input type="text" placeholder="{{ content.text_placeholder }}" class="go-address">
					</div>
					<div class="form-input line-before">
						<input  data-address="{{ global.street }}, {{ global.city }}, {{ global.state }}" type="submit" value="{{ content.text_button }}">
					</div>
				</div>
			</form>
		</div>
	</div>
</div>