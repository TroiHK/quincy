{% if fn('is_front_page') %}
<header class="block-header">
    <div id="img-banner" class="block-header__thumb" style="background-image: url('{{Image(post._thumbnail_id).src|resize(1920)}}')">
    </div>

    <div class="call-action-button hidden-xs container text-right">
        {% if not global.availability_off and global.apply_link %}
            <a class="apply-link" href="{{global.apply_link}}" target="_blank">APPLY NOW</a>
        {% endif %}

        {% if global.phone %}
            <a class="phone-link" href="tel:{{global.phone|replace({' ': ''})}}">{{global.phone}}</a>
        {% endif %}
    </div>

    {#<div class="visible-xs">#}
        {#<img src="{{Image(post._thumbnail_id).src|resize(767)}}" class="img-responsive" alt="hero-image {{site.title}}">#}
    {#</div>#}

    {% include 'partials/menu.twig' %}

    <div class="block-header__detail">
        <div class="block-header__logo">
            <a href="{{site.url}}">
            	<span style="background-image: url('{{global.logo}}')">{{site.title}}</span>
            </a>
        </div>
    </div>
    <a href="#block-life" title="" class="scroll-next-section"><i class="fa fa-caret-down"></i></a>

        <div id="slider-vertical" data-scroll-target="img-banner" class="hidden-xs"></div>
</header>
{% else %}
    <header class="block-header block-header--internal">
        <div id="img-banner" class="block-header__thumb" style="background-image: url('{{Image(post._thumbnail_id).src|resize(1920)}}')">
        </div>

        <div class="call-action-button hidden-xs container text-right">
            {% if not global.availability_off and global.apply_link %}
                <a class="apply-link" href="{{global.apply_link}}" target="_blank">APPLY NOW</a>
            {% endif %}

            {% if global.phone %}
                <a class="phone-link" href="tel:{{global.phone|replace({' ': ''})}}">{{global.phone}}</a>
            {% endif %}
        </div>

        {% include 'partials/menu.twig' %}

        <div class="block-header__detail">
            <div class="container">
                <div class="row">
                    <div class="col-sm-10 col-sm-offset1">
                        <h1>THE QUINCY AMENITIES</h1>
                        <p>Lorem ipsum dolor sit amet, conse tetuer adipiscing em </p>
                        <p>Lorem ipsum dolor sit amet, conse tetuer adipiscing em </p>

                        <ul class="list-default">
                            <li><a href="#">INTERIOR FINISHES</a></li>
                            <li><a href="#">INTERIOR FINISHES</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <a href="#block-life" title="" class="scroll-next-section"><i class="fa fa-caret-down"></i></a>
    </header>
{% endif %}


<div class="quick-search">
    <div class="title">{{global.title_qs}}</div>
    {% for item in global.item_qs %}
        <a href="{{item.link}}">
            {{item.label}}
            <span class="description">{{item.description}}</span>
        </a>
    {% endfor %}
</div>